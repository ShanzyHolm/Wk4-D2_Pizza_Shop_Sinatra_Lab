<h1>My Pizza Order</h1>

<p>First Name: <%= @order.first_name()%></p>
<p>Last Name: <%= @order.last_name()%></p>
<p>Topping: <%= @order.topping()%></p>
<p>Quantity: <%= @order.quantity() %></p>
<hr />

<form action="/pizza-orders/delete/ <%= @order.id() %>" method="post">
  <input type="submit" value="Cancel Order">
</form>

<form action="/pizza-orders/update/ <%= @order.id() %>" method="get">
  <input type="submit" value="Edit Information">
</form>
